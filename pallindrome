class Solution {
public:
    int reverse(int x) {
        
    
        long a = x;        

        string s = to_string(a);
        if (a < 0)
            s.push_back('-');
        std::reverse(s.begin(), s.end());     

        long y = stoll(s);
        if (y > INT32_MAX || y < INT32_MIN)
        return 0;
        
        return y;
        
    
        
    }
};
