class Solution {
public:
    bool isPalindrome(int x) {
        int a=reverse(x);
        if (a==x)
            return 1;
        else
            return 0;
        
    }
     int reverse(int x) {
        
    
        long a = x;        

        string s = to_string(a);
        if (a < 0)
            s.push_back('-');
        std::reverse(s.begin(), s.end());     

        long y = stoll(s);
        return y;        
    
        
    }
};
